{
  "compilerOptions": {
    "plugins": [
      { "transform": "ts-transformer-keys/transformer" }
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "incremental": true,
    "outDir": "./build",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@packages/*": ["packages/*"]
    },
  },
  "include": [
    "index.ts",
    "./src/**/*",
    "./test/**/*",
    "./jest.config.ts",
    "./jest-functional.config.ts"
  ],
  "exclude": [
    "node_modules",
    "newrelic.js",
    "build/**/*",
    "coverage/**/*",
    "deploy/**/*"
  ]
}
